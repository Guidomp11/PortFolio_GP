<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
    
    <header>
        <div class="container">
            <div class="logoContainer">
                <a href="/" class="logo"><img src="../images/LogoPaginaWeb.png" alt="Logo"></a>
                <h1>sustentAR</h1>
            </div>
            
            <nav class="navbar navbar-expand-md mb-0">
                <button class="navbar-toggler burger" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="fas fa-bars"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    
                    <ul class="navbar-nav toLeft">
                        <li><a href="/">Home</a></li>
                        <li><a href="product/listadoDeProductos">Comprar</a></li>
                        
                    </ul>
                    <ul class="navbar-nav toRight">
                        <li><a href="/carrito">Carrito</a></li>
                        <li>
                            <a href="" class="cuentaToggler" type="" data-toggle="collapse" data-target="#cuentaCollapse" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                Cuenta <i class="fas fa-chevron-down"></i> 
                            </a>
                            <div class="collapse cuentaCollapseAbs" id="cuentaCollapse">
                                <% if(typeof usuarioLogueado == 'undefined') { %>
                                    <div class="card card-body">
                                        <a href="/user/login">Ingresar</a>
                                        <a href="/user/registro">Registrarse</a>
                                    </div>
                                <% } else{ %>
                                    <div class="card card-body">
                                        <a href="/user/misCompras/<%=usuario%>">Historial</a>
                                        <a href="/user/cuenta/<%=usuario%>">Editar</a>
                                        <a href="/user/logout">Salir</a>
                                    </div>
                                <% } %>
                            </div>
                        </li>
                    </ul>
                    
                </div>
                
            </nav>
            
            
            
        </div>
        
        <!-- Search -->
        <div class="container-main-search">
            <div class="main-search">
                <form class="row" action="/product/listadoDeProductos/busquedaAvanzada?" method="GET">
                    <input class="inputDeBusqueda col-7 col-sm-10" type="text" placeholder="Buscá productos"  id="busquedaAvanzada" name="busquedaAvanzada">
                    <button class="col-2" class="btn-toggle-search" type="submit"><i class="fas fa-search"></i></button>
                </form>
            </div>
        </div>
        <!-- /Search -->
        
        
    </header>
    
    
    <div class="container-fluid p-0"> <!-- Container -->
        
        
        <!-- Banner -->
        
        <div id="carouselIndicators" class="banner carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselIndicators" data-slide-to="1"></li>
                <li data-target="#carouselIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="/images/banner-calidad-300.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner-diseno-300.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="/images/banner-sustentabilidad-300.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- /Banner -->
        
        
        
        <!-- HomeProductsContainer -->
        <section id="section-home-products">
            <div class="container">
                <h2>Nuestros productos</h2>
                <div class="productsList row">

                    <% for(let i = 0; i < 4; i++){ %>
                        <article class="col-12 col-sm-6 col-md-4 col-lg-3">
                            <a href="/product/detail/<%= productos[i].id %>"><img class="col-12" src="/images/productos/<%= productos[i].imagenes[0].nombre %>" alt="">
                                <div>
                                    <h4><%= productos[i].nombre %></h4>
                                    <h5 class="product-price"><%= productos[i].precio %></h5>
                                    <% if(productos[i].descuento != " "){ %>
                                        <h6 class="product-discount"> <%= productos[i].descuento %> </h6>
                                    <% }%>
                                </div>
                            </a>
                        </article>
                    <% } %>
                    <div class="d-flex justify-content-center col-12">
                        <a href="/product/listadoDeProductos" class="col-6">
                            <button class="col-12 botonStyle">Ver más productos</button>
                        </a>
                    </div>

                </div>    
            </div>
        </section>
        <!-- /HomeProductsContainer -->
    </div> <!-- /Container -->
    <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scripts.ejs') %>    
</body>
</html>