<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <body>
        <%- include('./partials/header') %> 
        <div class="container register-container">
            

            <form class="text-center border border-light p-5" action="" method="POST">
                <% if(typeof mensaje != 'undefined'){ %>
                    <div class="alert alert-success" role="alert">
                        <%=mensaje%>
                    </div>
                <% } %>
                

                <p class="h4 mb-4 register-title">Ayudanos a mejorar</p>
    
                <div class="form-row mb-4">
                    <div class="col">
                        <!-- First name -->
                        <input name="user_name" type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Nombre" value="<%=(typeof user != 'undefined' && user.name != null)? user.name : '' %>" required>
                    </div>
                    <div class="col">
                        <!-- Last name -->
                        <input name="user_last_name" type="text" id="defaultRegisterFormLastName" class="form-control" placeholder="Apellido" value="<%=(typeof user != 'undefined' && user.last_name != null)? user.last_name : '' %>" required>
                    </div>
                </div>
    
                <!-- E-mail -->
                <input name="user_email" type="email" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="E-mail" value="<%=(typeof user != 'undefined' && user.email != null)? user.email : '' %>" required>

                <div class="d-flex justify-content-start w-100">
                    <select name="affair" id="options" class="mb-3">
                        <option value="" hidden>Â¿Que nos falta?</option>
                        <option value="Universidad">Falta mi universidad</option>
                        <option value="Instituto">Falta mi instituto</option>
                        <option value="Carrera">Falta mi carrera</option>
                        <option value="Curso">Falta mi curso</option>
                    </select>
                </div>                

                <textarea class="form-control" name="request" id="request" cols="30" rows="5" placeholder="Contanos que es lo que falta" required></textarea>
                
                <button class="btn  my-4 btn-block btn-log-reg" type="submit">Enviar</button>
            </form>
        </div>
        
        <%- include('./partials/footer') %>
        <%- include('./partials/scripts') %>
    </body>
</html>