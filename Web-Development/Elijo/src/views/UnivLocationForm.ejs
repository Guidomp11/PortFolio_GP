<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head') %>
    <style>
        input{
            width: 400px;
            height: 40px;
            padding: 3px;
        }
        input::placeholder {
            color: grey;
        }
        button{
            width: 200px;
            height: 100px;
            background-color: green;
        }
        #location:nth-child(even){
            padding: 5px;
            background-color: grey;
        }
    </style>
    <body>


        <form action="/population/addUniversityLocation/<%=university.id%>" method="POST" class="ml-5">

            <h4 class="mt-3 ">Cantidad de sedes:</h4>
            <input required name="locationAmount" type="number" placeholder="2" id="amount">

            <div id="locationData">
            </div>

            <button class="my-5" type="submit" id="btnSubmitLocation">Siguiente</button>

        </form>

        
        <%- include('./partials/scripts.ejs') %>
        <script src="/js/population/addLocation.js"></script>


    </body>
</html>